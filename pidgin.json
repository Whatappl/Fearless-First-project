<input type="text" id="verseInput" placeholder="Enter book chapter:verse">
<button onclick="showVerse()">Search</button>
<p id="verseOutput"></p>

<script>
function showVerse() {
  const input = document.getElementById("verseInput").value;
  const output = document.getElementById("verseOutput");
  if(bibleData[input]) {
    output.textContent = bibleData[input];
  } else {
    output.textContent = "Verse not found.";
  }
}
</script>
